<%- include('includes/head'); %>
<%- include('includes/navbar'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3 text-center">
      <h1>Contact</h1>
      <p class="text-center lead">Create or edit your contact</p>

      <%- include('includes/messages') %>

      <% if(contact._id) { %>
        <form action="/contact/edit/<%= contact._id %>" method="POST">
      <% } else { %>
        <form action="/contact/add" method="POST">
      <% } %>      
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="mb-3">
          <input value="<%= contact.firstName %>" type="text" class="form-control" name="firstName" placeholder="First Name">
        </div>
        <div class="mb-3">
          <input value="<%= contact.lastName %>" type="text" class="form-control" name="lastName" placeholder="Last Name">
        </div>
        <div class="mb-3">
          <input value="<%= contact.phone %>" type="tel" class="form-control" name="phone" placeholder="Phone">
        </div>
        <div class="mb-3">
          <input value="<%= contact.email %>" type="email" class="form-control" name="email" placeholder="Email">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
      </form>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer'); %>